
<odoo>
    <record id="view_print_substrate_tree" model="ir.ui.view">
        <field name="name">print.substrate.tree</field>
        <field name="model">print.substrate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="width_usable_mm"/>
                <field name="length_roll_m"/>
                <field name="area_roll_m2"/>
                <field name="waste_rate"/>
            </tree>
        </field>
    </record>

    <record id="view_print_substrate_form" model="ir.ui.view">
        <field name="name">print.substrate.form</field>
        <field name="model">print.substrate</field>
        <field name="arch" type="xml">
            <form string="Sustrato">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                    <group string="Medidas y costos">
                        <field name="width_usable_mm"/>
                        <field name="length_roll_m"/>
                        <field name="area_roll_m2" readonly="1"/>
                        <field name="cost_roll"/>
                        <field name="waste_rate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_print_substrate" model="ir.actions.act_window">
        <field name="name">Sustratos</field>
        <field name="res_model">print.substrate</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
