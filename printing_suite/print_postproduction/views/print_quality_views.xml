
<odoo>
    <record id="view_print_quality_tree" model="ir.ui.view">
        <field name="name">print.quality.check.tree</field>
        <field name="model">print.quality.check</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="job_id"/>
                <field name="passed"/>
            </tree>
        </field>
    </record>

    <record id="view_print_quality_form" model="ir.ui.view">
        <field name="name">print.quality.check.form</field>
        <field name="model">print.quality.check</field>
        <field name="arch" type="xml">
            <form string="Calidad de impresiÃ³n">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="job_id"/>
                        <field name="passed"/>
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_print_quality" model="ir.actions.act_window">
        <field name="name">Calidad</field>
        <field name="res_model">print.quality.check</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_print_quality" name="Calidad" parent="print_materials.menu_print_root" action="action_print_quality" sequence="50"/>
</odoo>
