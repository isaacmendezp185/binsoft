
<odoo>
    <record id="view_print_job_kanban" model="ir.ui.view">
        <field name="name">print.job.kanban</field>
        <field name="model">print.job</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><span>Cliente:</span> <field name="partner_id"/></div>
                            <div><span>Área:</span> <field name="area_m2"/> m²</div>
                            <div><span>Sustrato:</span> <field name="substrate_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_print_job_kanban" model="ir.actions.act_window">
        <field name="name">Taller</field>
        <field name="res_model">print.job</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"search_default_group_by_state": 1}</field>
    </record>
</odoo>
